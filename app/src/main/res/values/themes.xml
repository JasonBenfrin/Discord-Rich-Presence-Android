<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DiscordRPC" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/menu_background</item>
        <item name="colorPrimaryVariant">@color/menu_ripple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/menu_text</item>
        <item name="colorSecondaryVariant">@color/menu_active</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="switchStyle">@style/Widget.DiscordRPC.Switches</item>
        <item name="android:statusBarColor" tools:targetApi="LOLLIPOP">#196585</item>
        <item name="android:navigationBarColor" tools:targetApi="LOLLIPOP">@color/menu_background</item>
    </style>

    <style name="ThemeOverlay.DiscordRPC.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/menu_ripple</item>
        <item name="colorSurface">@color/menu_background</item>
        <item name="colorSecondaryContainer">@color/menu_active</item>
    </style>
    <style name="Widget.DiscordRPC.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DiscordRPC.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.DiscordRPC.NavigationRail" parent="">
        <item name="colorPrimary">@color/menu_ripple</item>
        <item name="colorSurface">@color/menu_background</item>
        <item name="colorSecondaryContainer">@color/menu_active</item>
    </style>
    <style name="Widget.DiscordRPC.NavigationRail" parent="Widget.Material3.NavigationRailView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DiscordRPC.NavigationRail</item>
    </style>

    <style name="ThemeOverlay.DiscordRPC.ConnectButton" parent="">
        <item name="colorPrimary">@color/menu_ripple</item>
        <item name="colorSurface">@color/menu_background</item>
    </style>
    <style name="Widget.DiscordRPC.ConnectButton" parent="Widget.Material3.Button.Icon">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DiscordRPC.ConnectButton</item>
    </style>

    <style name="ThemeOverlay.DiscordRPC.Switches" parent="">
        <item name="colorPrimary">@color/discord_blue</item>
        <item name="colorPrimaryContainer">@color/discord_blue</item>
        <item name="colorOnSurface">@color/discord_blue</item>
        <item name="colorOutline">@color/discord_blue</item>
    </style>
    <style name="Widget.DiscordRPC.Switches" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DiscordRPC.Switches</item>
    </style>
</resources>